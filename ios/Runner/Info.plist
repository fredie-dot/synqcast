<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Synqcast</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>synqcast</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Camera and Microphone permissions -->
	<key>NSCameraUsageDescription</key>
	<string>SynqCast needs camera access to enable video streaming and screen sharing features.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>SynqCast needs microphone access to enable audio streaming during screen sharing sessions.</string>
	
	<!-- Photo Library permissions for recordings -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>SynqCast needs photo library access to save and manage recorded sessions.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>SynqCast needs permission to save recorded sessions to your photo library.</string>
	
	<!-- Network permissions -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>SynqCast uses local network to connect with nearby devices for screen sharing.</string>
	
	<!-- Screen recording permissions -->
	<key>NSMicrophoneUsageDescription</key>
	<string>SynqCast needs microphone access for audio during screen recording.</string>
	
	<!-- Background modes for continuous streaming -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		<string>voip</string>
		<string>background-processing</string>
	</array>
	
	<!-- Required device capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
		<string>video-camera</string>
		<string>microphone</string>
	</array>
</dict>
</plist>
